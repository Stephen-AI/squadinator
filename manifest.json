{
  "manifest_version": 2,

  "name": "comic",
  "description": "This extension displays everything you care about in the only font that matters - Comic Sans!",
  "version": "0.0.0.0",
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["comic.css"],
      "js": ["jQuery1x10x2.js", "comic.js"],
	  "run_at": "document_end"
    }
  ],
  
  "background": {
	"scripts": ["background.js"],
	"persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "Toggle Comic"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}